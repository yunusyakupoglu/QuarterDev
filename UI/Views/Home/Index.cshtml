@model HomeViewModel
@{
	ViewData["Title"] = "Anasayfa";
}

<style>
	.faq-one .accrodion.active .accrodion-title h4::after {
		opacity: 0 !important;
	}

	.faq-one__home-one {
		padding-top: 110px;
		padding-bottom: 10px;
		background-image: url(../seclight/assets/images/resources/faqImg.png);
		background-repeat: no-repeat;
		background-position: bottom right;
	}
</style>

<section class="banner-one">
	<div class="container">
		<div class="row">
			<div class="col-xl-5">
				<div class="banner-one__content">
					<h3><span style="color:#0BA4E9">QUARTER</span> İLE HER ZAMAN BİR ADIM İLERİDE.</h3>
					<p>İhtiyaçlarınıza özel yenilikçi, optimize ve hızlı çözümler üretiyoruz.</p>
					<div class="banner-one__btn-block">
						<a asp-controller="Customer" asp-action="Create" class="thm-btn">Başlayalım</a><!-- /.thm-btn -->
					</div><!-- /.banner-one__btn-block -->
				</div><!-- /.banner-one__content -->
			</div><!-- /.col-lg-5 -->
			<div class="col-xl-7">
				<div class="banner-one__images wow fadeInRight" data-wow-duration="1500ms">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer11.png" class="banner-one__image-1" alt=""> <!--slider-layer11-->
					<img src="~/seclight/assets/images/resources/home-one/slider-layer12.png" class="banner-one__image-2 float-bob-y" alt=""> <!--slider-layer12-->
					<img src="~/seclight/assets/images/resources/home-one/slider-layer3.png" class="banner-one__image-3" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer4.png" class="banner-one__image-4" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer5.png" class="banner-one__image-5" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer6.png" class="banner-one__image-6" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer7.png" class="banner-one__image-7" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer18.png" class="banner-one__image-8 float-bob-x" alt=""> <!--slider-layer18-->
					<img src="~/seclight/assets/images/resources/home-one/slider-layer9.png" class="banner-one__image-9" alt="">
					<img src="~/seclight/assets/images/resources/home-one/slider-layer10.png" class="banner-one__image-10" alt="">
				</div><!-- /.banner-one__images -->
			</div><!-- /.col-lg-7 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.banner-one -->

<section class="service-three">
	<div class="container">
		<div class="block-title block-title__two text-center">
			<h4>Hizmetlerimiz</h4>
			<h3>Profesyonel çözümler üretiyoruz.</h3>
			<p>
				Şirketlerin ya da kişisel girişimlerin dijital ortamda ön plana çıkarması için profesyonel çözümler üretiyoruz.
			</p>
		</div><!-- /.block-title text-center -->
		<div class="row">
			@foreach (var service in Model.companyServices)
			{
				<div class="col-lg-6">
					<div class="service-three__single wow fadeInLeft" data-wow-duration="1500ms" data-wow-delay="0ms">
						<div class="service-three__inner">
							<i class="@service.IconCode"></i>
							<h3>@service.Title</h3>
							<p>@service.Description</p>
						</div><!-- /.service-three__inner -->
				</div><!-- /.service-three__single -->
			</div>

				<!-- /.col-lg-4 -->
			}
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.service-three -->

<section class="service-two">
	<img src="assets/images/shapes/service-shape-1-3.png" class="service-two__shape-1 float-bob-y" alt="">
	<div class="container">
		<div class="row">
			<div class="col-xl-5 d-flex">
				<div class="my-auto">
					<div class="service-two__moc-box wow fadeInUp" data-wow-duration="1500ms">
						<img src="~/seclight/assets/images/resources/service-moc-11-1.png" class="float-bob-x" alt="">
					</div><!-- /.service-two__moc-box -->
				</div><!-- /.my-auto -->
			</div><!-- /.col-lg-5 -->
			<div class="col-xl-7">
				<div class="service-two__content">
					<div class="block-title block-title__two text-left">
						<h4>Hakkımızda</h4>
						<h3>Quarter Yazılım ve Danışmanlık</h3>
						<p>
							Quarter olarak; özel yazılım geliştirme, kurumsal web tasarım ve mobil uygulama geliştirme alanlarında siz değerli müşterilerimize profesyonel destek ve çözümler sunuyoruz.
						</p>
						<br />
						<p>
							Siz de yazılım çözümlerimizle ilgili bilgi almak için hemen bize ulaşın.
						</p>
					</div><!-- /.block-title text-center -->
				</div><!-- /.service-two__content -->
			</div><!-- /.col-lg-7 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.service-two -->

<section class="faq-one__home-one faq-one">
	<div class="container">
		<div class="block-title block-title__two text-left">
			<div class="row">
				<div class="col-lg-10">
					<h4>Sizin İçin Buradayız</h4>
					<h3>Zaman, Maliyet, Planlama, Süreç ve daha bir sürü akılda kalan düşünceler. Hepsi için buradayız.</h3>
				</div><!-- /.col-lg-6 -->
			</div><!-- /.row -->
		</div><!-- /.block-title text-left -->
		<div class="row">
			<div class="col-lg-8">
				<div class="accrodion-grp" data-grp-name="faq-accrodion-1">
					@foreach (var item in Model.faqs)
					{
						<div class="accrodion active">
							<div class="accrodion-title">
								<h4>@item.Title</h4>
							</div>
							<div class="accrodion-content">
								<div class="inner">
									<p>
										@item.Description
									</p>
								</div><!-- /.inner -->
						</div>
						</div>
					}

				</div>
			</div><!-- /.col-lg-6 -->

		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.faq-one__home-one -->

<div class="clients">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="owl-carousel owl-theme clients-carousel">
					@foreach (var img in Model.projects)
					{
						<div class="item box" style="width:187.5px;height:150px; display:flex;align-items:center"><img alt="client logo" class="client-img" src="@img.ImagePath"></div>

					}
				</div>
			</div>
		</div>
	</div>
</div>