@model HomeViewModel
@{
	ViewData["Title"] = "Hakkında";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="service-two">
	<img src="~/seclight/assets/images/shapes/service-shape-1-3.png" class="service-two__shape-1 float-bob-y" alt="">
	<div class="container">
		<div class="row">
			<div class="col-xl-5 d-flex">
				<div class="my-auto">
					<div class="service-two__moc-box wow fadeInUp" data-wow-duration="1500ms">
						<img src="~/seclight/assets/images/resources/about.png" style="width:350px;height:100%" class="float-bob-x" alt="">
					</div><!-- /.service-two__moc-box -->
				</div><!-- /.my-auto -->
			</div><!-- /.col-lg-5 -->
			<div class="col-xl-7">
				<div class="service-two__content">
					<div class="block-title block-title__two text-center" style="height:300px;display:flex;align-items:center">
						<h1 style="color:white"><b>Hakkında</b></h1>
					</div><!-- /.block-title text-center -->
				</div><!-- /.service-two__content -->
			</div><!-- /.col-lg-7 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.service-two -->

<section class="service-details">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="service-details__content">
					@foreach (var title in Model.abouts)
					{
						<h3>@title.Title</h3>
						@foreach (var description in Model.aUDescriptions)
						{
							@if (title.Id == description.AboutUsId)
							{
								<p>
									@description.Description
								</p>
							}
						}
						<br />
					}
				</div><!-- /.service-details__content -->
			</div><!-- /.col-lg-12 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.service-details -->