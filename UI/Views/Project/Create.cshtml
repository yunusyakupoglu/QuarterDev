@model ProjectCreateDto

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="statbox widget box box-shadow">
			<div class=" align-left">
				<div class="row">
					<div class="col-md-12 mb-2">
						<button onclick="IndexPage()" class="btn-creative btn-3 btn-3e flaticon-arrow-left-1"><span>Tüm Quarter Kategorileri</span></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="col-lg-12 col-lg-12 col-md-12 col-sm-12 col-12  layout-spacing">
	<div class="row">
		<div class="col-md-12 mb-4">
			<div class="statbox widget box box-shadow">
				<div class="widget-header">
					<div class="row">
						<div class="col-xl-12 col-md-12 col-sm-12 col-12">
							<h4>Proje ve Referans Ekle</h4>
						</div>
					</div>
				</div>
				<div class="widget-content widget-content-area">
					<form asp-action="Create" enctype="multipart/form-data" method="post">
						<div asp-validation-summary="ModelOnly" class="text-color"></div>
						<div class="form-group">
							<label for="exampleFormControlInput1">Şirket Adı</label>
							<input asp-for="BrandName" class="form-control form-control-lg" type="text" placeholder="Lütfen bir şirket adı giriniz.">
							<span asp-validation-for="BrandName"></span>
						</div>
						<div class="form-group">
							<label for="exampleFormControlInput1">Proje Türü</label>
							<input asp-for="ProjectType" class="form-control form-control-lg" type="text" placeholder="Lütfen bir proje türü giriniz.">
							<span asp-validation-for="ProjectType"></span>
						</div>
						<div class="form-group">
							<label for="exampleFormControlInput1">Başlık</label>
							<input asp-for="Title" class="form-control form-control-lg" type="text" placeholder="Lütfen bir başlık giriniz.">
							<span asp-validation-for="Title"></span>
						</div>

						<div class="form-group">
							<label for="exampleFormControlInput1">Resim Dosyası</label>
							<input asp-for="FileDoc" class="form-control form-control-lg" type="file" placeholder="Lütfen resim seçiniz.">
							<span asp-validation-for="FileDoc"></span>
						</div>
						<div class="form-group">
							<label for="exampleFormControlInput1">Proje Açıklaması</label>
							<textarea asp-for="Description" class="form-control form-control-lg" type="text" placeholder="Lütfen bir açıklama giriniz."></textarea>
							<span asp-validation-for="Description"></span>
						</div>
						<div class="custom-control custom-checkbox mb-4">
							<input type="checkbox" asp-for="Status" class="custom-control-input" id="customCheck1">
							<label class="custom-control-label" for="customCheck1">Aktif</label>
							<span asp-validation-for="Status"></span>
						</div>
						<input type="submit" name="time" class="mb-4 btn btn-button-7">
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
