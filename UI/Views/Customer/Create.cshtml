@model CustomerCreateDto
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="service-two">
	<img src="assets/images/shapes/service-shape-1-3.png" class="service-two__shape-1 float-bob-y" alt="">
	<div class="container">
		<div class="row">
			<div class="col-xl-5 d-flex">
				<div class="my-auto">
					<div class="service-two__moc-box wow fadeInUp" data-wow-duration="1500ms">
						<img src="~/seclight/assets/images/resources/service-moc-11-1.png" class="float-bob-x" alt="">
					</div><!-- /.service-two__moc-box -->
				</div><!-- /.my-auto -->
			</div><!-- /.col-lg-5 -->
			<div class="col-xl-7">
				<div class="service-two__content">
					<div class="block-title block-title__two text-center" style="height:300px;display:flex;align-items:center">
						<h1 style="color:white"><b>Müşteri Hizmet Destek Formu</b></h1>
					</div><!-- /.block-title text-center -->
				</div><!-- /.service-two__content -->
			</div><!-- /.col-lg-7 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.service-two -->

<section class="service-three" style="height:250px !important;">
	<div class="container">
		<div class="block-title block-title__two text-center">
			<h4>Müşteri Destek Formu</h4>
			<h3>Profesyonel, Optimize ve Hızlı</h3>
		</div><!-- /.block-title text-center -->
	</div><!-- /.container -->
</section><!-- /.service-three -->

<section class="contact-two">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 d-flex">
				<div class="my-auto">
					<div class="contact-two__content">
						<div class="block-title block-title__two text-left">
						</div><!-- /.block-title text-center -->
					</div><!-- /.contact-two__content -->
				</div><!-- /.my-auto -->
			</div><!-- /.col-lg-6 -->
			<div class="col-lg-8">
				<form asp-action="Create" method="post" class="contact-form-validated contact-two__form">
					<div asp-validation-summary="ModelOnly" class="text-color"></div>
					<img src="~/seclight/assets/images/shapes/contact-shape-2.png" class="contact-two__form-shape" alt="">
					<div class="contact-two__form-inner wow fadeInRight" data-wow-duration="1500ms">
						<div class="row">
							<div class="col-md-6">
								<input asp-for="CustomerName" type="text" placeholder="Adınız *" name="CustomerName">
								<span asp-validation-for="CustomerName"></span>
							</div><!-- /.col-md-6 -->
							<div class="col-md-6">
								<input asp-for="CustomerSurName" type="text" placeholder="Soyadınız *" name="CustomerSurName">
								<span asp-validation-for="CustomerSurName"></span>
							</div><!-- /.col-md-6 -->
							<div class="col-md-12">
								<input asp-for="CustomerMail" type="email" placeholder="Email Adresiniz *" name="CustomerMail">
								<span asp-validation-for="CustomerMail"></span>
							</div><!-- /.col-md-12 -->
							<div class="col-md-12">
								<input asp-for="CustomerPhone" type="tel" placeholder="Telefon Numaranız *" name="CustomerPhone">
								<span asp-validation-for="CustomerPhone"></span>
							</div><!-- /.col-md-12 -->
							<div class="col-md-12">
								<select asp-for="ProductType" name="ProductType" class="selectpicker">
									<option value="Mobil Uygulama Geliştirme">Mobil Uygulama Geliştirme</option>
									<option value="Web Geliştirme">Web Geliştirme</option>
									<option value="Masaüstü Yazılımı Geliştirme">Masaüstü Yazılımı Geliştirme</option>
									<option value="Logo Tasarımı">Logo Tasarımı</option>
									<option value="Yazılım Danışmanlığı">Yazılım Danışmanlığı</option>
								</select>
								<span asp-validation-for="ProductType"></span>
							</div><!-- /.col-md-12 -->
							<div class="col-md-12">
								<textarea asp-for="Description" name="Description" placeholder="Lütfen almak istediğiniz destek ile ilgili ayrıntılı bilgi veriniz."></textarea>
								<span asp-validation-for="Description"></span>
							</div><!-- /.col-md-6 -->
							<div class="col-md-12" style="visibility:hidden">
								<input asp-for="Status" type="checkbox" placeholder="Aktiflik *" checked name="Status">
								<span asp-validation-for="Status"></span>
							</div><!-- /.col-md-12 -->
							<div class="col-md-12">
								<button type="submit" class="thm-btn contact-two__btn">Gönder</button>
								<!-- /.thm-btn contact-two__btn -->
							</div><!-- /.col-md-12 -->
						</div><!-- /.row -->
					</div><!-- /.contact-two__form-inner -->
				</form><!-- /.contact-two__form -->
			</div><!-- /.col-lg-6 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.contact-two -->
<br /><br /><br />